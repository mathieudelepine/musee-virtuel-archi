<p id="notice"><%= notice %></p>

<h1>Arts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Picture</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.name %></td>
        <td><%= art.author %></td>
        <td> <img src="<%= art.picture %>"> </td>
        <td><%= art.description %></td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Art', new_art_path %>

  <!-- CARDS -->
<div class="container">
  <div class="row">
  <% @arts.each do |art| %>
    <div class="col-sm-3">
      <div class="card card text-white bg-secondary mb-3">
        <img src="<%= art.picture %>" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
  <!-- CARDS FIN-->