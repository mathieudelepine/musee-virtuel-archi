<section class="py-5 ">
<div class="container">
  <%= link_to 'New Sort', new_sort_path, class: 'btn btn-light' %>
  <div class="row py-5">
  <% @sorts.each do |sort| %>
    <div class="col-sm-12">
      <div class="card text-black bg-light mb-3 border-0 shadow rounded">
        <img src="<%= sort.image %>" class="card-img rounded-lg" alt="Image Here">
        <div class="card-body">
          <h5 class="card-title"><%= sort.artname %></h5>
          <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to 'Show', sort, class: 'btn btn-outline-secondary' %>
          <%= link_to 'Edit', edit_sort_path(sort), class: 'btn btn-outline-secondary' %>

          <%= link_to 'Destroy', sort, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
</section>
